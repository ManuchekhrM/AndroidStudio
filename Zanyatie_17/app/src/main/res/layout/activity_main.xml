<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tajhoney"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Taj H  ney"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:text="Рады приветствовать Вас на нашей страничке! Мы –семья пчеловодов которая
        реализует только собственные
        продукты собранные на наших пасеках."
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_below="@+id/tajhoney"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="35dp"/>

    <ImageView
        android:id="@+id/ugl"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginTop="317dp"
        android:layout_marginHorizontal="212dp"
        android:src="@drawable/ic_6u"/>

    <ImageView
        android:id="@+id/bee"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_bee"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="110dp"
        />

    <Button
        android:id="@+id/knopka"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="More info."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text1"/>


</RelativeLayout>